<form class="box" action="/station/{{station._id}}/addreading" method="POST">
  <label> Enter Reading Details</label>
  <div class="field is-horizontal">
    <div class="field-body">
      
        
      <div class="field">
        
        <input class="input" type="number" placeholder="Code" name="code">
      </div>
        
      <div class="field">
        <input class="input" type="number" placeholder="Temperature C" name="temperature">
      </div>
        
      <div class="field">
        <input class="input" type="number" placeholder="WindSpeed kM/h" name="windSpeed">
      </div>
      
      <div class="field">
        <input class="input" type="number" placeholder="WindDirection deg" name="windDirection">
      </div>
        
      <div class="field">
        <input class="input" type="number" placeholder="Pressure hPa" name="pressure">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Reading</button>
</form>
